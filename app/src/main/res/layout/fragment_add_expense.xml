<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gr.teilar.scrooge.Fragments.AddExpenseFragment">

    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="3">


        <TextView
            android:text="@string/expense_amount"
            style="@style/TextViewStyleExpense"
            android:id="@+id/textView4"
            android:layout_row="0"
            android:layout_column="0"/>
        <EditText
            android:layout_width="wrap_content"
            android:hint="@string/enter_amount"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/amountfrag"/>

        <TextView
            android:text="@string/expense_description"
            style="@style/TextViewStyleExpense"
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="0"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_description"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/descriptionFrag"/>

        <TextView
            android:text="@string/category_name"
            style="@style/TextViewStyleExpense"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_column="0"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/categoryFrag"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/addCategoryButton"
            android:text="Add Category" />

        <TextView
            android:text="@string/expense_date"
            style="@style/TextViewStyleExpense"
            android:id="@+id/textView7"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/dateFrag"/>

        <TextView
            android:text="@string/locationName"
            style="@style/TextViewStyleExpense"
            android:id="@+id/locationNameTextView"
            android:layout_row="4"
            android:layout_column="0"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:hint="@string/enter_location_name"
            android:layout_row="4"
            android:id="@+id/locationNameEditText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/add_expense"
            android:layout_row="5"
            android:id="@+id/addExpenseButton"/>

    </GridLayout>

</FrameLayout>
